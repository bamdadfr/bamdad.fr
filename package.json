  "scripts": {
    "build": "pnpm build:run && pnpm build:post",
    "build:run": "next build",
    "build:post": "build:post:sitemap && build:post:clearmaps",
    "build:post:sitemap": "next-sitemap",
    "build:post:clearmaps": "find .next/static -type f -name \"*.map\" -exec rm {} \\;",
    "coverage": "pnpm test:coverage",
    "clean": "pnpm next:clean && pnpm package:clean",
    "dev": "next dev",
    "export": "next export",
    "lint": "eslint src --ext .js --fix",
    "next:clean": "rimraf .next",
    "package:clean": "rimraf node_modules",
    "package:reinstall": "pnpm package:clean && pnpm i",
    "package:sort": "npx sort-package-json",
    "start": "next start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
